{
  "name": "yaren-app",
  "version": "1.0.0",
  "description": "牙人委托发布与查看应用",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "clean-dist": "rimraf dist",
    "build": "npm run clean-dist && electron-builder",
    "release": "npm run build && electron-builder --publish always",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "fayufm",
  "license": "ISC",
  "devDependencies": {
    "electron": "^36.0.0",
    "electron-builder": "^26.0.12",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "electron-store": "^10.0.1",
    "lowdb": "^7.0.1",
    "uuid": "^11.1.0"
  },
  "build": {
    "appId": "com.yaren.app",
    "productName": "牙人",
    "directories": {
      "output": "dist"
    },
    "icon": "yaren.ico",
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "yaren.ico"
    },
    "portable": {
      "artifactName": "牙人-${version}.exe"
    },
    "forceCodeSigning": false,
    "publish": {
      "provider": "github",
      "owner": "fayufm",
      "repo": "ya-ren-wn.v3",
      "releaseType": "release"
    },
    "electronDownload": {
      "strictSSL": false
    }
  }
}
