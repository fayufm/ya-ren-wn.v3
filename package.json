{
  "name": "yaren-app",
  "version": "1.0.0",
  "description": "牙人委托发布与查看应用",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "clean-dist": "rimraf dist",
    "build": "npm run clean-dist && electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^36.0.0",
    "electron-builder": "^26.0.12",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "electron-store": "^10.0.1",
    "lowdb": "^7.0.1",
    "uuid": "^11.1.0"
  },
  "build": {
    "appId": "com.yaren.app",
    "productName": "牙人",
    "directories": {
      "output": "dist"
    },
    "icon": "yaren.ico",
    "win": {
      "target": "nsis",
      "verifyUpdateCodeSignature": false,
      "signAndEditExecutable": false,
      "icon": "yaren.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "installerIcon": "yaren.ico",
      "uninstallerIcon": "yaren.ico",
      "installerHeaderIcon": "yaren.ico",
      "installerSidebar": "yaren-1.png",
      "uninstallerSidebar": "yaren-1.png",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "牙人",
      "artifactName": "牙人安装程序-${version}.${ext}",
      "include": "installer.nsh"
    },
    "forceCodeSigning": false,
    "publish": null,
    "electronDownload": {
      "strictSSL": false
    }
  }
}
